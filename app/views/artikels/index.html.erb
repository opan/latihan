<div class="container well">
  <h3>Daftar Artikel</h3>
</div>

<div class="container table-responsive">
<table style="text-align: justify" class="table table-striped table-hover table-condensed table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Tipe Artikel</th>
      <th>Content Artikel</th>
    </tr>
  </thead>

  <tbody style="cursor: pointer">
    <% @artikels.each do |artikel| %>
      <tr onclick="redirectTo('<%= artikel_path(artikel.id)%>')">
        <td><%= artikel.title %></td>
        <td><%= artikel.ar_type %></td>
        <td><%= artikel.ar_con %></td>
        <td><%= link_to 'Edit', edit_artikel_path(artikel) %></td>
        <td><%= link_to 'Destroy', artikel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artikel', new_artikel_path %>
</div>